#pragma once
#include <lua/types>

namespace std {
    namespace lua {
        extern "C" {
            size_t _allocs();
            size_t _blocks();
        }
        size_t allocs();
        size_t blocks();

        size_t allocs() {
            return _allocs();
        }

        size_t blocks() {
            return _blocks();
        }
    }
}